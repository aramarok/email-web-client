<html xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
	xmlns:ui="http://java.sun.com/jsf/facelets">

<body bgcolor="white">
<ui:composition template="home.jspx">

	<ui:define name="centerContent">
		<div class="borderTable tableW height160px"><ice:dataTable
			var="email" value="#{TrashBean.emails}" columnWidths="20%,70%,10%"
			styleClass="tableW" scrollable="true" scrollHeight="155px">
			<ice:column>
				<ice:rowSelector value="#{email.selected}" multiple="false"
					selectionListener="#{TrashBean.elementRowSelection}" />

				<f:facet name="header">
					<ice:commandSortHeader columnName="from" arrow="true">
						<ice:outputText styleClass="label" escape="false"
							value="#{msg['home.menu.trash.emails.from']}" />
					</ice:commandSortHeader>
				</f:facet>
				<ice:panelGroup styleClass="alignCenter">
					<ice:outputText styleClass="text" value="#{email.from}" />
				</ice:panelGroup>
			</ice:column>
			<ice:column>
				<f:facet name="header">
					<ice:commandSortHeader columnName="subject" arrow="true">
						<ice:outputText styleClass="label" escape="false"
							value="#{msg['home.menu.trash.emails.subject']}" />
					</ice:commandSortHeader>
				</f:facet>
				<ice:panelGroup styleClass="alignLeft">
					<ice:outputText styleClass="text" value="#{email.subject}" />
				</ice:panelGroup>
			</ice:column>
			<ice:column>
				<f:facet name="header">
					<ice:commandSortHeader columnName="date" arrow="true">
						<ice:outputText styleClass="label" escape="false"
							value="#{msg['home.menu.trash.emails.date']}" />
					</ice:commandSortHeader>
				</f:facet>
				<ice:panelGroup styleClass="alignLeft">
					<ice:outputText styleClass="text" value="#{email.date}" />
				</ice:panelGroup>
			</ice:column>
		</ice:dataTable></div>
		<div class="height160px" style="margin-bottom: 5px; margin-top: 20px">
		<table border="0" style="width: 100%" cellpadding="1" cellspacing="5">
			<tr>
				<td style="width: 1%; text-align: right;"><ice:outputLabel
					value="#{msg['home.menu.trash.email.from']}" /></td>
				<td><ice:outputLabel value="#{TrashBean.from}"
					styleClass="length240px" /></td>
			</tr>
			<tr>
				<td style="text-align: right;"><ice:outputLabel
					value="#{msg['home.menu.trash.email.to']}"
					visible="#{TrashBean.showDetails}" /></td>
				<td><ice:outputLabel value="#{TrashBean.to}"
					styleClass="length240px" visible="#{TrashBean.showDetails}" /></td>
			</tr>
			<tr>
				<td style="text-align: right;"><ice:outputLabel
					value="#{msg['home.menu.trash.email.date']}"
					visible="#{TrashBean.showDetails}" /></td>
				<td><ice:outputLabel value="#{TrashBean.date}"
					styleClass="length240px" visible="#{TrashBean.showDetails}" /></td>
			</tr>
			<tr>
				<td style="text-align: right;"><ice:outputLabel
					value="#{msg['home.menu.trash.email.subject']}" /></td>
				<td><ice:outputLabel value="#{TrashBean.subject}"
					styleClass="length240px" /></td>
			</tr>
			<tr>
				<td></td>
				<td><ice:commandLink styleClass="link"
					action="#{TrashBean.showDetails}"
					visible="#{!TrashBean.showDetails}"
					value="#{msg['home.menu.trash.email.showDetails']}" /> <ice:commandLink
					styleClass="link" action="#{TrashBean.hideDetails}"
					visible="#{TrashBean.showDetails}"
					value="#{msg['home.menu.trash.email.hideDetails']}" /></td>
			</tr>
		</table>


		<div class="scrollableDiv borderTable height210px"
			style="overflow-x: hidden;"><ice:outputLabel
			value="#{TrashBean.content}" height="233px" /></div>
		</div>

	</ui:define>

</ui:composition>
</body>
</html>