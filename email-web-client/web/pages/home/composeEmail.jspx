<html xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
	xmlns:ui="http://java.sun.com/jsf/facelets">

<body bgcolor="white">
<ui:composition template="home.jspx">

	<ui:define name="centerContent">
		<ice:panelGroup styleClass="tableW">
			<table border="0" cellpadding="1" cellspacing="1">
				<tr>
					<td><ice:outputLabel
						value="#{msg['home.menu.composeEmail.from']}" /></td>
					<td><ice:selectOneMenu
						value="#{ComposeEmailBean.from}"
						styleClass="length240px">
						<f:selectItems value="#{ComposeEmailBean.emailAccountsAsSelectItem}" />
					</ice:selectOneMenu></td>
				</tr>
				<tr>
					<td><ice:outputLabel
						value="#{msg['home.menu.composeEmail.to']}" /></td>
					<td><ice:inputText value="#{ComposeEmailBean.to}" /></td>
				</tr>
				<tr>
					<td><ice:outputLabel
						value="#{msg['home.menu.composeEmail.cc']}" /></td>
					<td><ice:inputText value="#{ComposeEmailBean.cc}" /></td>
				</tr>
				<tr>
					<td><ice:outputLabel
						value="#{msg['home.menu.composeEmail.bcc']}" /></td>
					<td><ice:inputText value="#{ComposeEmailBean.bcc}" /></td>
				</tr>
				<tr>
					<td><ice:outputLabel
						value="#{msg['home.menu.composeEmail.subject']}" /></td>
					<td><ice:inputText value="#{ComposeEmailBean.subject}" /></td>
				</tr>
			</table>

			<ice:panelGroup>
				<ice:inputRichText id="iceInpRchTxt" 
					toolbar="#{ComposeEmailBean.toolbarMode}"
					value="#{ComposeEmailBean.value}" language="en" skin="silver" height="300px"/>
			</ice:panelGroup>

			<ice:commandButton value="#{msg['home.menu.composeEmail.send']}" action="#{ComposeEmailBean.send}"/>
			<ice:commandButton value="#{msg['home.menu.composeEmail.saveAsDraft']}" action="#{ComposeEmailBean.saveAsDraft}"/>
		</ice:panelGroup>
	</ui:define>

</ui:composition>
</body>
</html>