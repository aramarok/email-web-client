<html xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
	xmlns:ui="http://java.sun.com/jsf/facelets">

<body bgcolor="white">
<ui:composition template="home.jspx">

	<ui:define name="centerContent">
		<ice:panelGroup styleClass="componentBox">
			<ice:panelGrid   columns="3" style="float:left;vertical-align:middle;">
				<ice:outputLabel value="#{msg['home.menu.composeEmail.to']}" />
				<ice:inputText value="#{ComposeEmailBean.to}" />
			</ice:panelGrid >
			<ice:panelGrid  columns="2" style="float:left;vertical-align:middle;">
				<ice:outputLabel value="#{msg['home.menu.composeEmail.cc']}" />
				<ice:inputText value="#{ComposeEmailBean.cc}" />
			</ice:panelGrid>
			<ice:panelGrid columns="2" style="float:left;vertical-align:middle;">
				<ice:outputLabel value="#{msg['home.menu.composeEmail.bcc']}" />
				<ice:inputText value="#{ComposeEmailBean.bcc}" />
			</ice:panelGrid>
			<ice:panelGrid columns="2" style="float:left;vertical-align:middle;">
				<ice:outputLabel value="#{msg['home.menu.composeEmail.subject']}" />
				<ice:inputText value="#{ComposeEmailBean.subject}" />
			</ice:panelGrid>
			
			<ice:panelGroup styleClass="clearer" />

			<ice:panelGroup styleClass="exampleBox inputRichTextContainer">
				<ice:inputRichText id="iceInpRchTxt" height="275" width="600"
					toolbar="#{ComposeEmailBean.toolbarMode}"
					value="#{ComposeEmailBean.value}" language="en" skin="silver" />
			</ice:panelGroup>
			
			<ice:commandButton  value="#{msg['home.menu.composeEmail.send']}" />
		</ice:panelGroup>
	</ui:define>

</ui:composition>
</body>
</html>